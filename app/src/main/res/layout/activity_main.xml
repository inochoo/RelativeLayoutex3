<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#ffe4e1"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <TextView
        android:id="@+id/text1"
        android:text="1"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#c0c0c0"

        android:layout_width="200dp"
        android:layout_height="150dp"/>
    <TextView
        android:id="@+id/text2"
        android:text="2"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#c71585"
        android:layout_toRightOf="@+id/text1"
        android:layout_alignBottom="@+id/text1"

        android:layout_width="130dp"
        android:layout_height="100dp"/>
    <TextView
        android:id="@+id/text3"
        android:text="3"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#c0c0c0"
        android:layout_below="@+id/text2"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/text1"

        android:layout_width="200dp"
        android:layout_height="100dp"/>
    <TextView
        android:id="@+id/text4"
        android:text="4"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#b22222"
        android:layout_below="@+id/text3"

        android:layout_width="100dp"
        android:layout_height="150dp"/>

    <TextView
        android:id="@+id/text5"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_below="@+id/text3"
        android:layout_toRightOf="@id/text4"
        android:background="#cd5c5c"
        android:gravity="center"

        android:text="5"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/text6"
        android:textColor="@color/white"
        android:background="#000000"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_below="@+id/text3"
        android:layout_alignParentRight="true"

        android:gravity="center"
        android:text="6"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/text7"
        android:text="7"
        android:background="#ff0000"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@+id/text5"
        android:layout_toRightOf="@+id/text4"

        android:layout_width="90dp"
        android:layout_height="150dp"/>
    <TextView
        android:id="@+id/text8"
        android:text="8"
        android:background="#6b8e23"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_alignBottom="@+id/text7"
        android:layout_toRightOf="@+id/text7"
        android:layout_alignParentRight="true"

        android:layout_width="150dp"
        android:layout_height="80dp"/>
    <TextView
        android:id="@+id/text9"
        android:text="9"
        android:background="#c0c0c0"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/text7"
        android:layout_toLeftOf="@+id/text7"
        android:layout_alignParentLeft="true"

        android:layout_width="90dp"
        android:layout_height="150dp"/>
    <TextView
        android:id="@+id/text10"
        android:text="10"
        android:background="#00008b"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@+id/text8"
        android:layout_toRightOf="@+id/text7"
        android:layout_alignParentBottom="true"

        android:layout_width="90dp"
        android:layout_height="150dp"/>



</RelativeLayout>
